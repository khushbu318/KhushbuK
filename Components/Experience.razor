@using PortfolioSite.Models
@inject IJSRuntime JS


<section id="experience" class="experience__section">
    <div class="experience__container">
        <h2 class="experience__title">Experience</h2>

        <div class="experience__timeline">

            @foreach (var exp in UserData.Experiences)
            {
                <div class="experience__item">

                    <!-- DOT -->
                    <div class="experience__dot"></div>

                    <!-- CARD -->
                    <div class="experience__content">
                        <h3>@exp.Title</h3>
                        <h4>@exp.Company</h4>
                        <span class="experience__duration">@exp.Duration</span>

                        <p>@exp.Description</p>

                        <div class="experience__skill-tags">
                            @foreach (var skill in exp.Skills)
                            {
                                <span class="experience__skill-badge">@skill</span>
                            }
                        </div>
                    </div>

                </div>
            }

        </div>
    </div>
</section>

@code {
    protected override async Task OnAfterRenderAsync(bool firstRender)
    {
        if (firstRender)
        {
            await JS.InvokeVoidAsync("observeTimeline");
        }
    }
}
